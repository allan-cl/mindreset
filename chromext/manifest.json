{
  "manifest_version": 3,
  "name": "Realtime AI Assistant",
  "version": "1.0",
  "permissions": ["storage", "activeTab", "scripting", "tts"],
  "host_permissions": ["http://localhost:5150/"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}